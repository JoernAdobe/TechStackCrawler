{
  "name": "techstack-analyzer",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev:client": "npm run dev --workspace=client",
    "dev:server": "npm run dev --workspace=server",
    "dev": "concurrently -k \"npm run dev:server\" \"wait-on http://localhost:3001/api/health && npm run dev:client\"",
    "build": "npm run build --workspace=client && npm run build --workspace=server",
    "start": "npm run start --workspace=server",
    "test:connections": "cd server && npx dotenv -e ../.env -- tsx src/test-connections.ts",
    "rotate-bedrock-key": "npx dotenv -e .env -- tsx scripts/rotate-bedrock-key.ts",
    "test-bedrock-key": "npx dotenv -e .env -- tsx scripts/test-bedrock-key.ts",
    "export-for-deploy": "npx dotenv -e .env -- tsx scripts/export-local-analyses.ts",
    "generate-static-audio": "npx dotenv -e .env -- tsx scripts/generate-static-audio.ts"
  },
  "devDependencies": {
    "concurrently": "^9.1.0",
    "wait-on": "^8.0.1",
    "dotenv-cli": "^7.4.2"
  }
}